{% extends 'base.html.twig' %}

{% block title %}Nos Produits{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-3">
            <h3>Filtrer</h3>
            {{ form(form) }}
        </div>
        <div class="col-md-9">
            <h3>Nos produits</h3>
            <div class="row productContainer">
                {% for product in products %}
                <div class="col-md-4">
                   <div class="productItem text-center">
                        <a href="{{ path('app_product', {'slug' : product.slug})}}">
                            <img src="/uploads/{{product.illustration}}" alt="{{product.name}}" class="img-fluid">
                        </a>
                        <h4>{{product.name}}</h4>
                        <span class="productSubtitle">{{product.subtitle}}</span>
                        <span class="productPrice">{{(product.price /100)|number_format(2, ",",".")}}â‚¬</span>
                   </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
    
   
{% endblock %}
